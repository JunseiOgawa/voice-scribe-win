<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="VoiceScribe"
    Width="600"
    Height="700">

    <Grid Padding="20">
        <StackPanel Spacing="16">
            <TextBlock Text="VoiceScribe" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding StatusMessage}" FontSize="13"/>
            
            <TextBlock Text="Microphone:" FontWeight="SemiBold"/>
            <ComboBox ItemsSource="{Binding DeviceList}" SelectedIndex="{Binding SelectedDeviceIndex, Mode=TwoWay}"/>
            
            <TextBlock Text="Recognized Text:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding RecognizedText, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" Height="200"/>
            
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Start" Command="{Binding StartRecordingCommand}" Width="100"/>
                <Button Content="Stop" Command="{Binding StopRecordingCommand}" Width="100"/>
                <Button Content="Submit" Command="{Binding SubmitTextCommand}" Width="100"/>
                <Button Content="Clear" Click="OnClearClicked" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
