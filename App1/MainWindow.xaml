<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="VoiceScribe">
            <TextBlock Text="VoiceScribe" FontSize="24" FontWeight="Bold" Foreground="#0078D4"/>
            <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
            <TextBlock Text="Device:" FontWeight="SemiBold" Margin="0,12,0,0"/>
            <ComboBox ItemsSource="{Binding DeviceList}" SelectedIndex="{Binding SelectedDeviceIndex, Mode=TwoWay}"/>
            <TextBlock Text="Text:" FontWeight="SemiBold" Margin="0,12,0,0"/>
            <TextBox Text="{Binding RecognizedText, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" Height="150"/>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                <Button Content="Start" Command="{Binding StartRecordingCommand}"/>
                <Button Content="Stop" Command="{Binding StopRecordingCommand}"/>
                <Button Content="Submit" Command="{Binding SubmitTextCommand}"/>
                <Button Content="Clear" Click="OnClearClicked"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
